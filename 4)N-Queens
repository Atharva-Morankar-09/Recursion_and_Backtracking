
class Solution {
public:
    
    bool isP(int col, int row, vector<string> board, int n)
    {
        int r=row;
        int c=col;
        while(col>=0)
        {
            if(board[row][col]=='Q')
            {
                return false;
            }
            col--;
        }
        
        row=r;
        col=c;
        while(row>=0 && col>=0)
        {
            if(board[row][col]=='Q')
            {
                return false;
            }
            row--;
            col--;
        }
        
        row=r;
        col=c;
        while(row<n && col>=0)
        {
            if(board[row][col]=='Q')
            {
                return false;
            }
            row++;
            col--;
        }
       return true; 
    }
    
    void rec(int col, vector<string>& board, vector<vector<string>>& ans, int n)
    {
        if(col==n)
        {
            ans.push_back(board);
            return ;
        }
        
        for(int row=0;row<n;row++)
        {
            if(isP(col,row,board,n))
            {
                board[row][col]='Q';
                rec(col+1,board,ans,n);
                board[row][col]='.';
            }
        }
    }
    
    vector<vector<string>> solveNQueens(int n) {
        vector<vector<string>> ans;
        vector<string> board(n);
        string s(n,'.');
        for(int i=0;i<n;i++)
        {
            board[i]=s;
        }
        rec(0,board,ans,n);
        return ans;
    }
};

// Optimised
